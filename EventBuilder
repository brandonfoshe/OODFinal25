public class EventBuilder {

    //HEADER:
    //Builder with functions to build each type of event

    private int time;
    private int duration;
    private String title;
    private String description;
    private String location;
    private String company;
    private int day;


    //Setters for each element of the calendar
    public void setTime(int time){
        this.time = time;
    }

    public void setDuration(int duration){
        this.duration = duration;
    }

    public void setTitle(String title){
        this.title = title;
    }

    public void setDescription(String description){
        this.description = description;
    }

    public void setLocation(String location){
        this.location = location;
    }

    public void setCompany(String company){
        this.company = company;
    }

    public void setDay(int day){
        this.day = day;
    }

    //Build a work event, which takes in an additional company variable
    public WorkEvent buildWorkEvent(){
        return new WorkEvent(time, duration, title, description, location, company, day);
    }

    //Build a personal event, which takes the basic variables
    public PersonalEvent buildPersonalEvent(){
        return new PersonalEvent(time, duration, title, description, location, day);
    }
}
