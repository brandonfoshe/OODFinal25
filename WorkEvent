public class WorkEvent extends Event {
    private final String company;

    public WorkEvent(int time, int duration, String title, String description, String location, String company, int day) {
        super(time, duration, title, description, location, day);
        this.company = company;
    }

    @Override
    public String toString(){
        return super.toString() + "\nCompany: " + company;
    }
}
